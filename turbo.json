{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "tasks": {
        "build": {
            "cache": false
        },
        "dev": {
            "cache": false,
            "interactive": true
        },
        "check:typescript": {},
        "lint": {},
        "//#check:format": {},
        "circular:check": {},
        "precommit": {
            "dependsOn": ["lint", "check:typescript", "circular:check", "test:native", "test:web", "//#check:format"]
        },
        "test": {
            "dependsOn": ["test:native", "test:web"]
        },
        "test:native": {
            "cache": false
        },
        "test:web": {
            "cache": false
        }
    }
}
