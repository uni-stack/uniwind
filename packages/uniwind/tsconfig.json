{
    "compilerOptions": {
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2022",
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "isolatedModules": true,
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "moduleResolution": "Bundler",
        "module": "ESNext",
        "outDir": "dist",
        "sourceMap": false,
        "declaration": false,
        "removeComments": false,
        "declarationMap": false,
        "jsx": "react-jsx",
        "lib": [
            "es2022",
            "DOM"
        ]
    },
    "include": [
        "./src",
        "./scripts",
        "./types.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
